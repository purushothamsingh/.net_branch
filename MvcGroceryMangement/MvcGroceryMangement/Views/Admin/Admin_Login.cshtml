@model MvcGroceryMangement.Models.Admin


@{
    ViewData["Title"] = "Admin_Login";
}

<h1>Admin_Login</h1>

<form method="post" asp-action="Admin_Login">
<section class="vh-100 ">
    <div class="container pyy-2 h-100 ">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 2rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://thumbs.dreamstime.com/b/business-lady-sitting-office-desk-laptop-attractive-woman-94044255.jpg"
                                 alt="login form" class="img-fluid1" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-7 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">


                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>

                                        <span class="h1 fw-bold mb-0">Admin</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3"  style="letter-spacing: 1px;">Sign into your account</h5>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Admin_UserName"  id="form2Example17" class="form-control form-control-lg" autocomplete="off" />
                                        <label asp-for="Admin_UserName" class="form-label" for="form2Example17">User Name</label>
                                        <span asp-validation-for="Admin_UserName" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Admin_Password" type="password"  class="form-control form-control-lg" autocomplete="off" />
                                        <label asp-for="Admin_Password" class="form-label">Password</label>
                                        <span asp-validation-for="Admin_Password" class="text-danger"></span>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                        @*<a asp-controller="Admin" asp-action="Admin_Login" class="btn btn-secondary" style="width:150px">Back To List</a>*@
                                    </div>

                                    <a class="small text-muted" href="#!">Forgot password?</a>
                                    <br />

                                    <a href="#!" class="small text-muted">Terms of use.</a>
                                    <a href="#!" class="small text-muted">Privacy policy</a>
                             

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
        // client side validation....
    }
    }