@model IEnumerable<MvcGroceryMangement.Models.Cart>

@using MvcGroceryMangement.Models;
@using PagedList;
@using PagedList.Mvc;
@{
    ViewData["Title"] = "CartView";
}

@{
 


    ApplyPagination pager = new ApplyPagination();

    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}





<h1 class="p-3">Cart Area </h1>

<div class="container border-3">
    <table class="table table-secondary border-2  mt-xl-5 table-responsive-xxl border-4">


        <thead class="table-dark ">
            <tr>
                <th scope="col">ProductTitle</th>
                <th scope="col">ProductPrice</th>
                <th scope="col">Description</th>
                <th scope="col">TotalAmount</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
@foreach(var item in Model){
            <tr>
                <td>@item.ProductTitle</td>
                <td>@item.Price</td>
                <td>@item.ProductDesc</td>
                <td>@item.TotalAmount</td>
                    <td width="20%">
                        <div class="w-200 btn-group text">

                            <div>
                                <a asp-controller="Cart" asp-action="RemoveItem" asp-route-id="@item.Id" class="btn btn-primary btn-sm p-2  text-danger"> <span>  </span> <i class="bi bi-trash"></i>Remove </a>
                            </div>
                        </div>

                    </td>
            </tr>


}

        </tbody>
    </table>
<partial name="_Pagination_cart" model="@pager" />
