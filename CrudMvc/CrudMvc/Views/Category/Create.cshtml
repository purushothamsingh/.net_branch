

@model Category
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<form method="post">
    <div class="border p-3 mt-5" >

       <div class="row ">
           <h2 class="text-warning">Create Category</h2>
           <hr />
       </div>

       <div class="mb-3"> 
           <label asp-for="Name"> </label>
            <input asp-for="Name" class="form-control" style="width:50%" />
            <span asp-validation-for="Name" class="text-danger"></span>
       </div>

        <div class="mb-3">
            <label asp-for="CreatedDateTime" class="mb-2"> </label>
            <input asp-for="CreatedDateTime" class="form-control" style="width:50%" />
            <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder" class="mb-2"> </label>
            <input asp-for="DisplayOrder"  class="form-control"  class= "mb-2" style="width:50%" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        
        <div class="text-md-center mb-3 ">
            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back To List</a>
           
        </div>
       
    </div>




</form>

