
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<CrudMvc.Models.Category>

<partial name="_Notification"/>

<h2> Hello... @ViewBag.name</h2>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-warning">Categories_List</h2>
        </div>

        <div  class="col-6 text-end ">
           <a asp-controller="Category" asp-action ="Create" class= "btn btn-warning" >

                <i class="bi bi-file-earmark-plus" style="color:darkgreen" ></i>  Create New Category
           </a>
        </div>
    </div>
    <br />
    <br />


<table class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                CreatedTime
            </th>
            <th>
                DiplayOrder
            </th>
            <th>

            </th>
        </tr>
    </thead>

    <tbody>

        @foreach(var item in Model){
            <tr>
                <td width="20%">
                    @item.Id
                </td>
                <td width="20%">
                    @item.Name
                </td>
                <td width="20%">
                    @item.CreatedDateTime
                </td>
                <td width="20%">
                    @item.DisplayOrder
                </td>
                <td width="20%">
                    <div class="w-200 btn-group text-end" role="group" >
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-warning mx-2"> <i class="bi bi-pencil-square"></i>Edit </a>

                    </div>
                </td>
            </tr>
        }

    </tbody>




</table>


</div>


